<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- GOOGLE MAP FRAGMENT -->
    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapsActivity" />

    <!-- SEARCH BAR -->
    <RelativeLayout
        android:id="@+id/relLayout1"
        android:layout_width="296dp"
        android:layout_height="49dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_toStartOf="@+id/UPD"
        android:layout_toLeftOf="@+id/UPD"
        android:background="#fff"
        android:elevation="10dp">

        <ImageView
            android:id="@+id/ic_magnify"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:contentDescription="A search icon"
            android:src="@drawable/ic_magnify" />


        <EditText
            android:id="@+id/stmu_search"
            android:layout_width="261dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/ic_magnify"
            android:autoText="false"
            android:background="@null"
            android:hint="  Search for a campus location..."
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:textColor="#000"
            android:textSize="15sp" />


     <!-- UPD BUTTON -->
    </RelativeLayout>

    <Button
        android:id="@+id/UPD"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="1dp"
        android:backgroundTint="#15317E"
        android:text="UPD"
        android:textColor="#FFD700"
        android:textSize="18sp" />

    <!-- RECENTER BUTTON -->
    <RelativeLayout
        android:id="@+id/relLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">

        <Button
            android:id="@+id/recenterButton"
            android:layout_width="67dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginBottom="157dp"
            android:background="#00FFFFFF"
            android:visibility="visible"
            app:backgroundTint="#00FFFFFF"
            app:icon="@color/white"
            app:iconPadding="20dp"
            app:iconTint="#FA0202" />

        <ImageView
            android:id="@+id/ic_reCenterButton"
            android:layout_width="68dp"
            android:layout_height="69dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="156dp"
            android:contentDescription="A recenter icon"
            android:src="@drawable/ic_baseline_gps_fixed_24" />

    </RelativeLayout>

</RelativeLayout>